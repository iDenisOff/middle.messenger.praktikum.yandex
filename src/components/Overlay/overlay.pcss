.overlay {
    opacity: 0;
    visibility: hidden;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgb(0 0 0 / 50%);
    z-index: 20;
    transition: .3s all;
}

.overlay.active {
    opacity: 1;
    visibility: visible;
}

.transparent {
    background-color: unset;
}
