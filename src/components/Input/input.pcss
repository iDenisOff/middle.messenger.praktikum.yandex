.input {
    margin-bottom: 20px;

    &__label {
        font-size: 12px;
        color: #999;
    }

    &__value {
        width: 100%;
        border: none;
        border-bottom: 1px solid #3369F3;
        font-size: 14px;
    }

    &__error {
        font-size: 8px;
        color: #FF2F2F;
    }
}
