@import url('../../../styles.pcss');

.button {
    width: 100%;
    border-radius: 8px;
    border: none;
    background-color: $color-blue-primary;
    line-height: 37px;
    color: $color-white;
    font-size: 13px;
}

.button:hover {
    background-color: $color-blue-dark;
    cursor: pointer;
}

.button:active {
    transition: none;
    transform:scale(.96);
}
