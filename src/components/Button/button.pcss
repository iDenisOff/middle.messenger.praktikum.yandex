.button {
    width: 100%;
    border-radius: 8px;
    border: none;
    background-color: #3369f3;
    line-height: 37px;
    color: #fff;
    font-size: 13px;
}

.button:hover {
    background-color: #1646bf;
    cursor: pointer;
}

.button:active {
    transition: none;
    transform:scale(.96);
}
