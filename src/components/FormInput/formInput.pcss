@import url('../../../styles.pcss');

.form-input {
    margin-bottom: 20px;

    &__label {
        font-size: 12px;
        color: $color-grey-primary;
    }

    &__value {
        width: 100%;
        border: none;
        border-bottom: 1px solid $color-blue-primary;
        font-size: 14px;
    }

    &__error {
        font-size: 10px;
        color: $color-red-primary;
    }
}
