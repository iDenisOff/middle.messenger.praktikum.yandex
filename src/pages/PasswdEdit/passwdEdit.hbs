<div class="passwd-edit">
    <div class="passwd-edit__back">
        <img src={{back}} alt="back" />
    </div>
    <div class="passwd-edit__content">
        <div class="passwd-edit__content__container">
            <div class="passwd-edit__content__container_avatar">
                <img src={{avatar}} alt="avatar" />
            </div>
            <div class="passwd-edit__content__container_data">
                {{{oldPasswd}}}
                {{{newPasswd}}}
                {{{newPasswdRetry}}}
            </div>
            <div class="passwd-edit__content__container_button">
                {{{save}}}
            </div>
        </div>
    </div>
</div>
